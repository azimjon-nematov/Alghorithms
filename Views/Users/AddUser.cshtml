@using Alghorithms.Models
@{
    Layout = "/Views/Shared/Admin.cshtml";
}

<div class="templatemo-content-wrapper">
	<div class="templatemo-content">
	    @*<ol class="breadcrumb">
	        <li><a href="index.html">Admin Panel</a></li>
	        <li><a href="#">Preferences</a></li>
	        <li class="active">Form Controls</li>
	    </ol>*@
	    <h1>Редактировать пользователя</h1>
	    @*<p class="margin-bottom-15">Here goes another form and form controls.</p>*@
	    <div class="row">
	        <div class="col-md-12">
	            <form role="form" id="templatemo-preferences-form" method="post" action="@Url.Action("EditUser", "Users")">
	                <div class="row">
	                    <div class="col-md-6 margin-bottom-15">
	                        <label>Id</label>
	                        <input type="text" class="form-control" name="Id" id="userId" value="" readonly>  
	                        @*<p class="form-control-static" id="userId">@Model.Id</p>*@
	                    </div>
	                    <div class="col-md-6 margin-bottom-15">
	                        <label>Статус</label>
	                        <input type="text" class="form-control" name="IsAdmin" id="isAdmin" value="@(Model.IsAdmin ? "Пользователь" : "Админ")" readonly>  
	                        @*<p class="form-control-static" id="isAdmin">@(Model.IsAdmin ? "Пользователь" : "Админ")</p>*@
	                    </div>
	                </div>
	                <div class="row">
	                    <div class="col-md-6 margin-bottom-15">
	                        <label for="firstName" class="control-label">Имя</label>
	                        <input type="text" class="form-control" name="Name" id="userName" value="@Model.Name">
	                    </div>
	                    <div class="col-md-6 margin-bottom-15">
	                        <label>Логин</label>
	                        <input type="text" class="form-control" name="Login" id="login" value="@Model.Login">  
	                    </div>
	                </div>
	                <div class="row">
	                    <div class="col-md-6 margin-bottom-15">
	                        <label for="currentPassword">Пароль</label>
	                        <input type="text" @*type="password"*@ name="PasswordHash" class="form-control" id="currentPassword" value="@Model.PasswordHash" @*disabled*@>  
	                    </div>
	                    <div class="col-md-6 margin-bottom-15">
	                    </div>
	                </div>
	                

	                <div class="row templatemo-form-buttons">
	                    <div class="col-md-12">
	                        <button type="submit" class="btn btn-primary">Изменить</button>
	                    </div>
	                </div>
	            </form>
	        </div>
	    </div>
	</div>
</div>